{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "${NAME}-build",
        "labels": {
            "application": "${NAME}"
        }
    },
    "objects": [
        {
            "kind": "Secret",
            "type": "Opaque",
            "apiVersion": "v1",
            "metadata": {
                "name": "slack",
                "labels": {
                    "app": "${NAME}"
                }
            },
            "stringData": {
                "token": "${SLACK_SECRET}"
            }
        },
        {
            "kind": "Secret",
            "type": "Opaque",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-github",
                "labels": {
                    "app": "${NAME}"
                }
            },
            "stringData": {
                "WebHookSecretKey": "${GITHUB_SECRET}"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-caddy"
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-${GIT_REF}-build",
                "labels": {
                    "app": "${NAME}",
                    "name": "${NAME}-${GIT_REF}-build"
                }
            },
            "spec": {
                "runPolicy": "Parallel",
                "source": {
                    "type": "Git",
                    "git": {
                        "ref": "${GIT_REF}",
                        "uri": "${GIT_REPO_URL}"
                    },
                    "contextDir": "${SOURCE_CONTEXT_DIR}"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "${SOURCE_IMAGE_NAMESPACE}",
                            "name": "${SOURCE_IMAGE_NAME}:${SOURCE_IMAGE_TAG}"
                        },
                        "env": [{
                            "name": "BUILD_LOGLEVEL",
                            "value": "5"
                        }],
                        "incremental": false
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${NAME}:${OUTPUT_IMAGE_TAG}"
                    }
                },
                "resources": {
                    "requests": {
                        "cpu": "${CPU_REQUEST}",
                        "memory": "${MEMORY_REQUEST}"
                    },
                    "limits": {
                        "cpu": "${CPU_LIMIT}",
                        "memory": "${MEMORY_LIMIT}"
                    }
                },
                "triggers": [{
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-caddy-${GIT_REF}-build",
                "creationTimestamp": null,
                "labels": {
                    "app": "${NAME}"
                }
            },
            "spec": {
                "triggers": [{
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Dockerfile",
                    "dockerfile": "FROM bcgov-s2i-caddy\nCOPY build /var/www/html/",
                    "images": [{
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${NAME}:latest"
                        },
                        "paths": [{
                            "sourcePath": "/opt/app-root/src/build",
                            "destinationDir": "./"
                        }]
                    }]
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "bcgov-s2i-caddy:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${NAME}-caddy:latest"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-${GIT_REF}-pipeline",
                "creationTimestamp": null,
                "labels": {
                    "app": "${NAME}-${GIT_REF}-pipeline",
                    "name": "${NAME}-${GIT_REF}-pipeline",
                    "template": "${NAME}-${GIT_REF}-pipeline"
                }
            },
            "spec": {
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${GIT_REPO_URL}",
                        "ref": "${GIT_REF}"
                    }
                },
                "strategy": {
                    "type": "JenkinsPipeline",
                    "jenkinsPipelineStrategy": {
                        "jenkinsfilePath": "Jenkinsfile"
                    }
                },
                "triggers": [{
                    "type": "github",
                    "github": {
                        "secretReference": {
                          "name": "${NAME}-github"
                        }
                    }
                }],
                "output": {},
                "resources": {},
                "postCommit": {},
                "nodeSelector": null
            },
            "status": {
                "lastVersion": 0
            }
        }
    ],
    "parameters": [{
            "name": "NAME",
            "displayName": "Name",
            "description": "The name assigned to all of the objects defined in this template.  You should keep this as default unless your know what your doing.",
            "required": true,
            "value": "range-myra-web"
        },
        {
            "name": "SOURCE_IMAGE_NAMESPACE",
            "displayName": "Build Project",
            "description": "The openshift project where builds and target images are stored.",
            "required": true,
            "value": "openshift"
        },
        {
            "name": "GIT_REPO_URL",
            "displayName": "Git Repo URL",
            "description": "The URL to your GIT repo, don't use the this default unless your just experimenting.",
            "required": true,
            "value": "https://github.com/bcgov/range-web.git"
        },
        {
            "name": "GIT_REF",
            "displayName": "Git Reference",
            "description": "The git reference or branch.",
            "required": true,
            "value": "dev"
        },
        {
            "name": "SOURCE_CONTEXT_DIR",
            "displayName": "Source Context Directory",
            "description": "The source context directory.",
            "required": false,
            "value": ""
        },
        {
            "name": "OUTPUT_IMAGE_TAG",
            "displayName": "Output Image Tag",
            "description": "The tag given to the built image.",
            "required": true,
            "value": "latest"
        },
        {
            "name": "SOURCE_IMAGE_NAME",
            "displayName": "Source Image Name",
            "description": "The name of the source image.",
            "required": true,
            "value": "nodejs"
        },
        {
            "name": "SOURCE_IMAGE_TAG",
            "displayName": "Source Image Tag",
            "description": "The tag of the source image.",
            "required": true,
            "value": "8"
        },
        {
            "name": "CPU_LIMIT",
            "displayName": "Resources CPU Limit",
            "description": "The resources CPU limit (in cores) for this build.",
            "required": true,
            "value": "2"
        },
        {
            "name": "MEMORY_LIMIT",
            "displayName": "Resources Memory Limit",
            "description": "The resources Memory limit (in Mi, Gi, etc) for this build.",
            "required": true,
            "value": "2Gi"
        },
        {
            "name": "CPU_REQUEST",
            "displayName": "Resources CPU Request",
            "description": "The resources CPU request (in cores) for this build.",
            "required": true,
            "value": "1"
        },
        {
            "name": "MEMORY_REQUEST",
            "displayName": "Resources Memory Request",
            "description": "The resources Memory request (in Mi, Gi, etc) for this build.",
            "required": true,
            "value": "2Gi"
        },
        {
            "name": "GITHUB_SECRET",
            "displayName": "GitHub web hook secret",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{16}",
            "required": true
        },
        {
            "name": "SLACK_SECRET",
            "displayName": "Slack secret to post to channels",
            "required": true
        }
    ]
}